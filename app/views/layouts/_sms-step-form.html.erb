                          data-previous="debt-amount-field"
                          data-current="debt-number-field"
                          data-next="employment-status-field"
                          value="3"
                          data-parsley-multiple="debt-numbr">
                          <input type="hidden" id="gclid_field_debt_numbr_3" name="gclid_field_debt_numbr_3" value="">

                          <label for="debt-numbr-3" class="input-radio shadow rounded-3 py-2 px-0 cursor-p">
                            3
                          </label>
                        </div>
                        <div class="w-radio position-relative mt-2 mt-md-0">
                          <input
                          name="debt-numbr"
                          class="opacity-0 approve debt-numbr input-energy next cursor-p form-control"
                          id="debt-numbr-4"
                          data-parsley-group="block-1"
                          data-parsley-required="true"
                          data-parsley-required-message="Please select one company"
                          type="radio"
                          data-previous="debt-amount-field"
                          data-current="debt-number-field"
                          data-next="employment-status-field"
                          value="4"
                          data-parsley-multiple="debt-numbr">
                          <input type="hidden" id="gclid_field_debt_numbr_4" name="gclid_field_debt_numbr_4" value="">

                          <label for="debt-numbr-4" class="input-radio shadow rounded-3 py-2 px-0 cursor-p">
                            4
                          </label>
                        </div>
                        <div class="w-radio position-relative mt-2 mt-md-0">
                          <input
                          name="debt-numbr"
                          class="opacity-0 approve debt-numbr input-energy next cursor-p form-control"
                          id="debt-numbr-5"
                          data-parsley-group="block-1"
                          data-parsley-required="true"
                          data-parsley-required-message="Please select one company"
                          type="radio"
                          data-previous="debt-amount-field"
                          data-current="debt-number-field"
                          data-next="employment-status-field"
                          value="5"
                          data-parsley-multiple="debt-numbr">
                          <input type="hidden" id="gclid_field_debt_numbr_5" name="gclid_field_debt_numbr_5" value="">

                          <label for="debt-numbr-5" class="input-radio shadow rounded-3 py-2 px-0 cursor-p">
                            5
                          </label>
                        </div>
                        <div class="w-radio position-relative mt-2 mt-md-0">
                          <input
                          name="debt-numbr"
                          class="opacity-0 approve debt-numbr input-energy next cursor-p form-control"
                          id="debt-numbr-6"
                          data-parsley-group="block-1"
                          data-parsley-required="true"
                          data-parsley-required-message="Please select one company"
                          type="radio"
                          data-previous="debt-amount-field"
                          data-current="debt-number-field"
                          data-next="employment-status-field"
                          value="6+"
                          data-parsley-multiple="debt-numbr">
                          <input type="hidden" id="gclid_field_debt_numbr_6" name="gclid_field_debt_numbr_6" value="">

                          <label for="debt-numbr-6" class="input-radio shadow rounded-3 py-2 px-0 cursor-p">
                            6 +
                          </label>
                        </div>
                        <div class="error-checkbox"></div>
                      </div>
                    </div>
                  </div>
                  <input type="button" name="previous" class="previous action-button-previous" value="Previous" data-previous="debt-amount-field" data-current="debt-number-field"/>
                </fieldset>
                <!--  -->
                <fieldset class="employment-status-field">
                  <div class=" mt-4 text-center form-group">
                    <label class="d-flex justify-content-start mb-2 fw-bold">What is your employment status?</label>
                    <div class="mb-3 mx-auto">
                      <select
                        class="form-control employment-status h-60"
                        id="employment-status"
                        name="employment-status"
                        required=""
                        data-parsley-required="true"
                        data-parsley-required-message="Please Select Your Employment Status"
                        data-parsley-group="block-2"
                        >
                        <option value="" selected="true" disabled="disabled">Employment Status</option>
                        <option value="Full Time Employment">Full Time Employment</option>
                        <option value="Part Time Employment">Part Time Employment</option>
                        <option value="Temporary Employment">Temporary Employment</option>
                        <option value="Self Employed">Self Employed</option>
                        <option value="Unemployed">Unemployed</option>
                        <option value="Pension">Pension</option>
                        <option value="Disability Benefits">Disability Benefits</option>
                        <option value="Student">Student</option>
                      </select>
                    </div>
                  </div>
                  <input type="button" name="previous" class="previous action-button-previous" value="Previous" data-previous="debt-number-field" data-current="employment-status-field"/>
                  <input type="button"
                    data-parsley-group="block-2"
                    name="next"
                    class="next action-button"
                    value="Next"
                    data-current="employment-status-field"
                    data-next="residential-status-field"/>
                </fieldset>
                <!--  -->
                <fieldset class="residential-status-field">
                  <div class="row justify-content-center mt-4">
                    <div class="form-group col-12">
                      <h6 class="d-flex justify-content-start py-2">What is your residential status?</h6>
                      <div class="">
                        <div class="position-relative">
                          <select
                            class="form-control residential-status h-60"
                            id="residential-status"
                            name="residential-status"
                            required=""
                            data-parsley-required="true"
                            data-parsley-required-message="Please Select Your Residential Status"
                            data-parsley-group="block-3"
                            >
                            <option value="" selected="true" disabled="disabled">Residential Status</option>
                            <option value="Tenant">Tenant</option>
                            <option value="Council Tenant">Council Tenant</option>
                            <option value="Owner">Owner</option>
                            <option value="Living with Parents">Living with Parents</option>
                            <option value="Other">Other</option>
                          </select>
                        </div>
                        <div class="error-checkbox"></div>
                      </div>
                    </div>
                  </div>
                  <input type="button" name="previous" class="previous action-button-previous" value="Previous" data-previous="employment-status-field" data-current="residential-status-field"/>
                  <input type="button"
                    data-parsley-group="block-2"
                    name="next"
                    class="next action-button"
                    value="Next"
                    data-current="residential-status-field"
                    data-next="contact-detail-field"/>
                </fieldset>
                <!--  -->
                <fieldset class="contact-detail-field">
                  <div>
                    <h5 class="d-flex justify-content-start py-2 text-orng"><i class="fa-solid fa-circle-check text-green me-2"></i>You've qualified! Submit your request now and...</h5>
                  </div>
                  <div>
                    <ul class="text-start list-unstyled">
                      <li class="d-flex align-items-start justify-content-start">
                        <i class="fa-solid fa-circle-dot me-1 text-orng pt-1"></i>
                        Join the thousands that are writing off their debt everyday!
                      </li>
                      <li class="d-flex align-items-start justify-content-start">
                        <i class="fa-solid fa-circle-dot me-1 text-orng pt-1"></i>
                        Reduce monthly debt payment to as little as £85
                      </li>
                      <li class="d-flex align-items-start justify-content-start">
                        <i class="fa-solid fa-circle-dot me-1 text-orng pt-1"></i>
                        Get your 100% no obligation write off percentage
                      </li>
                    </ul>
                  </div>
                  <% if params[:action] == "sms" %>
                    <input type="hidden" name="page" class="page" value="sms">
                    <% if  params[:email].nil? || params[:email] == '' || params[:email] == '[email]' %>
                      <div class="form-group col-lg-8 col-12  mb-3 email-div mx-auto">
                        <label class=" w-100 text-start mb-1 form-label">Email</label>
                        <div class="clearfix"></div>
                        <input
                        type="email"
                        name="email"
                        required
                        data-parsley-required="true"
                        data-parsley-required-message="Please Enter Valid Email Address"
                        data-parsley-type="email"
                        data-parsley-type-message="Please Enter Valid Email Address"
                        data-parsley-group="block-4"
                        data-parsley-validemail
                        value=""
                        class="form-control email"
                        placeholder="Email Address">
                        <input type="hidden" id="gclid_field_email" name="gclid_field_email" value="">

                      </div>
                    <% end %>
                  <%else%>
                    <input type="hidden" name="page" class="page" value="home">
                    <div class="row justify-content-center mt-4">
                      <div class="form-group col-lg-6 col-12">
                        <label class=" w-100 text-start mb-1 form-label">First Name</label>
                        <!-- <span class="input-group-text" id="basic-addon1"><i class="fa-solid fa-user"></i></span> -->
                        <input
                        name="first_name"
                        required
